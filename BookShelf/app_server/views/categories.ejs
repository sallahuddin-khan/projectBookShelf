<% include partials/header %>




<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>welcome to bookshelf</h1>
            <p>Enjoy picking books of your taste :)</p>
            <a class="btn btn-primary btn-large" href="/AllBooks/new" >  Post Your Add</a> 
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% categories.forEach(function(categorie){ %>
            <div class="col-md-6 col-sm-2" >
                <div class="thumbnail" >
                   <a href="/AllBooks"> <img src="<%= categorie.image %> " style="width:60px">
                    <div class="caption">
                        <h3><%= categorie.name %></h3>

                    </div>
                </div>
                
              
            </div>
            <% }); %>
    </div>
</div>
<% include partials/footer %> 