<% include partials/header2 %>
<h1 style="text-align:center;">Edit <%= book.name %> </h1>
<div class="container">
    <div class="row">
        
        <div style="width: 30% ; margin:0 auto;">
            <form action="/allBooks/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group"> 
                <input class="form-control" type="text" name="name" placeholder="name" value="<%= book.name %>">
                </div>
                 <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url" value="<%= book.image %>"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="author" value="<%= book.Author %>">
                    </div>
                 <div class="form-group" >Genre:
                     <select name="genre" value="<%= book.genre %>">
                         <option value="Story">Story</option>
                         <option value="Poetry">Poetry</option>  
                         <option value="Literature">Literature</option>
                         <option value="Sci-Fi">Sci-Fi</option>
                         <option value="Biograpgy">Biography</option>
                         <option value="Others">Others</option>  
                         </select>
                <!-- <input class="form-control" type="text" name="category" placeholder="category"> -->
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="Description" placeholder="Description" value="<%= book.description %>">
                </div>
                <div class="form-group" name="condition" value="<%= book.condition %>">Condition:
                        <select>
                                <option value=1>1</option>
                                <option value=2>2</option>  
                                <option value=3>3</option>
                                <option value=4>4</option>
                                <option value=5>5</option>
                                <option value=6>6</option>  
                                <option value=7>7</option>  
                                <option value=8>8</option>  
                                <option value=9>9</option>  
                                <option value=10>10</option>  
                                </select>
                <!-- <input class="form-control" type="text" name="condition" placeholder="condition"> -->
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="price" placeholder="price" value="<%= book.price %>">
                </div>
                
                <input class="btn btn-lg btn-primary btn-block" type="submit">

            </form>
        </div>
    </div>
</div>
<% include partials/footer %> 